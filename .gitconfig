[user]
	name = Your Name
	email = your.email@example.com

[core]
	editor = nvim
	autocrlf = input
	safecrlf = true
	excludesfile = ~/.gitignore_global

[init]
	defaultBranch = main

[push]
	default = simple
	autoSetupRemote = true

[pull]
	rebase = false

[merge]
	tool = vimdiff

[diff]
	tool = vimdiff

[alias]
	# Basic shortcuts
	s = status
	st = status
	a = add
	aa = add --all
	c = commit
	cm = commit -m
	ca = commit --amend
	co = checkout
	cb = checkout -b
	sw = switch
	br = branch
	
	# Log aliases
	l = log --oneline
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lga = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
	
	# Diff aliases
	d = diff
	dc = diff --cached
	ds = diff --stat
	
	# Push/pull aliases
	p = push
	pl = pull
	pf = push --force-with-lease
	
	# Reset aliases
	unstage = reset HEAD --
	undo = reset HEAD~1 --mixed
	
	# Stash aliases
	ss = stash save
	sp = stash pop
	sl = stash list
	
	# Remote aliases
	r = remote
	rv = remote -v
	
	# Utility aliases
	aliases = config --get-regexp alias
	ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[rerere]
	enabled = true

[help]
	autocorrect = 1